{% extends 'base.html.twig' %}

{% block main %}
    <h1>Product categories list</h1>

    <div class="row">
        <a class="col-md-2 col-md-offset-10 col-sm-3 col-sm-offset-9 col-xs-4 col-xs-offset-8 btn btn-success" href="{{ path('product-category_new') }}">Add new category</a>
    </div>
    <div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td>{{ productCategory.id }}</td>
                <td>{{ productCategory.name }}</td>
                <td>
                    <a href="{{ path('product-category_show', { 'id': productCategory.id }) }}"
                    class="btn btn-default btn-sm" role="button">show</a>
                    <a href="{{ path('product-category_edit', { 'id': productCategory.id }) }}"
                    class="btn btn-info btn-sm" role="button">edit</a>
                    <a href="{{ path('product-category_delete', { 'id': productCategory.id }) }}"
                       class="btn btn-danger btn-sm" role="button">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>




{% endblock %}
