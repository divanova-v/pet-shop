{% extends 'base.html.twig' %}

{% block main %}
    <h1>User Sale Offers</h1>
    <div class="row">
        <a class="col-md-2 col-md-offset-10 col-sm-3 col-sm-offset-9 col-xs-4 col-xs-offset-8 btn btn-success"
           href="{{ path('user_saleoffer_new', {'id': user.id}) }}">Add new offer to user</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Order</th>
                    <th>Created on</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for offer in userOffers %}
                <tr>
                    <td>{{ offer.id }}</td>
                    <td>{{ offer.product.name }}</td>
                    <td>{{ offer.description }}</td>
                    <td>{{ offer.price }}</td>
                    <td>{{ offer.quantity }}</td>
                    <td>{{ offer.showOrder }}</td>
                    <td>{% if offer.createdOn %}{{ offer.createdOn|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="{{ path('saleoffer_edit', { 'id': offer.id }) }}">Edit</a>

                        <a href="{{ path('saleoffer_delete', { 'id': offer.id }) }}"
                               class="btn btn-danger btn-sm" role="button">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
