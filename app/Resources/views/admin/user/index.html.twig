{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>


    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Fullname</th>
                    <th>Cash</th>
                    <th>User Products</th>
                    <th>User offers</th>
                    {#<th>Block</th>#}
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.cash }}</td>
                    <td>
                        {% if user.products|length > 0 %}
                        <a class="btn btn-info btn-sm"
                           href="{{ path('user_products_index', { 'id': user.id }) }}">View Products</a>
                        {% endif %}
                        <a class=" btn btn-success btn-sm"
                           href="{{ path('user2product_new', {'id': user.id}) }}">Add new</a>
                    </td>
                    <td>
                        {% if user.saleOffers|length > 0 %}
                        <a class="btn btn-info btn-sm"
                           href="{{ path('user_products_in_sale', { 'id': user.id }) }}">View Offers</a>
                        {% endif %}
                        <a class=" btn btn-success btn-sm"
                           href="{{ path('user_saleoffer_new', {'id': user.id}) }}">Add new</a>
                    </td>
                    {#<td>#}
                        {#<a class="btn btn-danger btn-sm" href="#">Block</a>#}
                    {#</td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}
