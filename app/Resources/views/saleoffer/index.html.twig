{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-sm-4 col-sm-offset-8 col-xs-12">
            {{ form_start(filterForm) }}
            {{ form_widget(filterForm) }}
            <input class="btn btn-info" type="submit" value="Filter" />
            <a href="{{ path('saleoffer_index') }}" class="btn btn-default" role="button">Clear filter</a>
            {{ form_end(filterForm) }}
        </div>
    </div>
    <div class="row">
    {% for saleOffer in saleOffers %}
        <div class="offer col-lg-3">
            <h4 class="text-center">{{ saleOffer.product.name }}</h4>
            <img class="col-lg-12" src="/images/products/{{ saleOffer.product.image }}"/>

            <h4 class="text-right">
                <i>Price:
                    <b>
                        <span>{{ saleOffer.price|localizedcurrency('EUR') }}</span>
                    </b>
                </i>
            </h4>
            <div>
                <a href="{{ path('saleoffer_show', { 'id': saleOffer.id }) }}"
                   class="col-lg-5 btn btn-primary btn-sm active" role="button">
                    view
                </a>
                {#{% if app.user and app.user != saleOffer.user %}#}
                    {{ form_start(form, {
                        'action': path('saleoffer_add_to_cart', {'id':saleOffer.id}),
                        'method': 'POST'}) }}
                        {{ form_widget(form.quantity,
                        {'attr': {
                            'max': saleOffer.quantity,
                            'min': 1,
                            'value': 1,
                            'class': 'hidden'
                        }
                        }
                        ) }}
                        <button class="col-lg-5 col-lg-offset-2 btn btn-primary btn-sm active" type="submit" >
                            <img width="20" alt="cart" src="{{ asset('images/cart.png') }}" />
                            Add to cart
                        </button>
                    {{ form_end(form) }}
                {#{% endif %}#}
            </div>

        </div>
    {% endfor %}
    </div>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('saleoffer_new') }}">Create a new saleOffer</a>#}
        {#</li>#}
    {#</ul>#}
{% endblock %}
