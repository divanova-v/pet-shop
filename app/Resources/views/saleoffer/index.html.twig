{% extends 'base.html.twig' %}

{% block main %}
    <h1>Sale Offers</h1>
    {% for saleOffer in saleOffers %}
        <div class="offer col-lg-3">
            <h4 class="text-center">{{ saleOffer.product.name }}</h4>
            <img class="col-lg-12" src="/images/products/{{ saleOffer.product.image }}"/>
            <h4 class="text-right"><i><b>{{ saleOffer.price }}</b></i></h4>
            <div>
                <a href="{{ path('saleoffer_show', { 'id': saleOffer.id }) }}"
                   class="col-lg-5 btn btn-primary btn-sm active" role="button">
                    view
                </a>
                <a href="#" class="col-lg-5 col-lg-offset-2 btn btn-primary btn-sm active" role="button" >
                    Add to cart
                </a>
            </div>
            {#
            <div>
                <a href="{{ path('saleoffer_edit', { 'id': saleOffer.id }) }}"
